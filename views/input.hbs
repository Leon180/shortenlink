<form action="/shortenlink" class="needs-validation" novalidate>
  <div class="mb-3 row justify-content-md-center">
    <div class="col-lg-6">
      <input type="url" class="form-control bg-light bg-gradient border border-0 text-black-50 fs-4" id="validationLink"
        placeholder="Input URL here" name="link" required>
      <div class="invalid-feedback">
        Please provide a valid link.
      </div>
    </div>
  </div>
  <button type="submit" class="btn btn-outline-primary col-lg-3 fs-4">Shorten</button>
</form>